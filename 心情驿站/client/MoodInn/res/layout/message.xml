<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.djf.view.TitleBar 
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/MessageTitleBar"
        android:layout_alignParentTop="true"
        ></com.djf.view.TitleBar>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="28dp"
	    android:layout_below="@+id/MessageTitleBar"
	    android:layout_margin="2dp"
	    android:orientation="horizontal"
	    android:id="@+id/layout_str"
	    >
	    <RelativeLayout 
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:id="@+id/systemMessage"
	        android:layout_margin="1dp"
	        >
	        <TextView 
	            android:text="私信"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:id="@+id/tvSystem"
	            />
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:id="@+id/privateMessage"
	        android:layout_margin="1dp"
	        >
	        <TextView 
	            android:text="系统消息"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:id="@+id/tvPrivate"
	            />
	    </RelativeLayout>
	</LinearLayout>
	<View 
	    android:id="@+id/line"
	    android:layout_width="match_parent"
	    android:layout_height="0.5dip"
	    android:layout_marginLeft="1dp"
	    android:layout_marginRight="1dp"
	    android:background="#CFCFCF"
	    android:layout_below="@+id/layout_str"
	    />
	<android.support.v4.view.ViewPager  
        android:layout_width="match_parent"  
        android:layout_height="match_parent"
        android:layout_below="@+id/line"  
        android:id="@+id/messageViewPager"
        />  
</RelativeLayout>
