<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
    <com.djf.view.TitleBar 
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:id="@+id/settingTitleBar"
        ></com.djf.view.TitleBar>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/shape_bg"
        android:layout_below="@+id/settingTitleBar"
        android:id="@+id/layout_one"
        >
        <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:id="@+id/layout_animation"
        >
        <TextView 
            android:text="动画模式"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            />
        <com.djf.view.SwitchButton 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:id="@+id/sAnimation"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="0.5dip"
        android:background="#EDEDED"
        />
     <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        >
        <TextView 
            android:text="消息推送"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            />
        <com.djf.view.SwitchButton 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:id="@+id/sMessage"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
    </LinearLayout>
    
    <!-- 第二个分层 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/shape_bg"
        android:layout_below="@+id/layout_one"
        >
        <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:id="@+id/layout_clear"
        >
        <TextView 
            android:text="清理缓存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            />
       <RelativeLayout 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginRight="5dp"
           android:layout_centerInParent="true"
           >
           <TextView 
               android:text="m"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerInParent="true"
               android:id="@+id/m"
               android:layout_marginRight="8dp"
               />
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:layout_toLeftOf="@+id/m"
               android:paddingRight="1dp"
               android:text="1.5"
               />
       </RelativeLayout>
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="0.5dip"
        android:background="#EDEDED"
        />
     <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        >
        <TextView 
            android:text="更改主题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:id="@+id/tvTheme"
            android:text="点我"
            android:layout_marginRight="13dp"
            />
    </RelativeLayout>
    </LinearLayout>
    
    
</RelativeLayout>
